<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    <context:component-scan base-package="ua.org.gostroy"/>

    <context:property-placeholder properties-ref="deployProperties" />
    <bean id="deployProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:/etc/properties/app.properties" />
        <!--<property name="location" value="classpath:/etc/properties/app.#{systemProperties[â€˜ENV']}.properties" />-->
    </bean>

    <import resource="classpath:/etc/spring/spring-data.xml"/>
    <import resource="classpath:/etc/spring/beans/*.xml"/>

</beans>