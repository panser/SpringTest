<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ua.org.gostroy.exception.resolver.CustomExceptionResolver">
        <property name="exceptionMappings">
            <map>
                <entry key="ua.org.gostroy.exception.FunnyException" value="/exception/funnyException" />
            </map>
        </property>
    </bean>

    <bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <map>
                <entry key="ua.org.gostroy.exception.CustomException" value="/exception/customException" />
                <entry key="ua.org.gostroy.exception.SecondCustomException" value="/exception/secondCustomException" />
            </map>
        </property>
        <property name="defaultErrorView" value="/exception/defaultException" />
    </bean>

</beans>